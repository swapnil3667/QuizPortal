<div class="center jumbotron">
<h1>Quiz Portal</h1>
<% if current_user %>
	Welcome <%= current_user.email %> | <%= link_to 'Signout', destroy_user_session_path , method: :delete%>
    <h3>Question for this User</h3>
    <%= link_to 'Question', questions_path %> 
    
    <table>
	<thead>
		<tr>
			<th>Question</th>
			<th colspan="3"></th>
			</tr>
	</thead>

	<tbody>
		<% @questions.each do |question| %>
			<tr>
				<td><%= question.question %></td>
				<td><%= link_to 'Show', question %></td>
			</tr>
		<% end %>
	</tbody>
	</table>
	
	
<% else%>	
	<%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-primary btn-lg" %>
	<%= link_to 'Sign In', new_user_session_path,  class: "btn btn-primary btn-lg" %>
	<%= link_to 'New Question', new_question_path,  class: "btn btn-primary btn-lg" %>
<% end %>
</div>
